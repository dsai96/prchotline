
<div class="row">
  <div class="small-7 columns">
    <h2><em>Validations</em></h2>

    <%= form_tag("", :method => "get", id: "search-form") do %>
    <% @options = County.all.map { |a| [ a.name, a.id ] } %>
        <%= select_tag 'county', options_for_select(@options), :prompt => "Choose a county..." %>
        <%= submit_tag "Search", :name => nil %>
    <% end %>

    <% if @locations != [] %>

        <%= render 'layouts/partials/validations' %>

    <% end %>

  </div>
</div>
